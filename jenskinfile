pipeline {
    agent any
    tools { 
      maven 'Maven 3.9.4' 
      jdk 'jdk8' 
    }
    stages {
        
        stage('Code Analysis') {
            steps {
                // Integrate a code analysis tool using Checkstyle
                checkstyle canRunOnFailed: true, defaultEncoding: 'UTF-8', pattern: '**/*.java'
            }
        }
        stage('Security Scan') {
            steps {
                // Use OWASP ZAP for security scan
                sh 'zap-baseline.py -t http://localhost:8080 -r security-report.html'
                archiveArtifacts 'security-report.html'            }
            post {
                success {
                    emailext subject: 'Security Scan Success',
                              body: 'The Security Scan has succeeded. Find attached logs for more information.',
                              to: 'ngoquocbao17@gmail.com',
                              attachLog: true
                }
                failure {
                    emailext subject: 'Security Scan Failed',
                              body: 'The Security Scan has failed. Find attached logs for more information.',
                              to: 'ngoquocbao17@gmail.com',
                              attachLog: true
                }
            }
        }
        stage('Deploy to Staging') {
            steps {
                // Use SSH to deploy to staging 
                sshagent(['my-ssh-credentials']) {
                    sh 'ssh user@staging-server "cd /path/to/application && ./deploy.sh"'
                }
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                sh 'mvn test'
            }
            post {
                success {
                    emailext subject: 'Integration Tests on Staging Success',
                              body: 'The Integration Tests on Staging have succeeded. Find attached logs for more information.',
                              to: 'ngoquocbao17@gmail.com',
                              attachLog: true
                }
                failure {
                    emailext subject: 'Integration Tests on Staging Failed',
                              body: 'The Integration Tests on Staging have failed. Find attached logs for more information.',
                              to: 'ngoquocbao17@gmail.com',
                              attachLog: true
                }
            }
        }
        stage('Deploy to Production') {
            steps {
                // Use SSH deploy to production 
                sshagent(['my-ssh-credentials']) {
                    sh 'ssh user@production-server "cd /path/to/application && ./deploy.sh"'
                }
            }
        }
    }
}
